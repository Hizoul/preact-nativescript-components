{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
        "*": ["*", "../*"]
    },
    "typeRoots": [
      "@types",
      "src/@types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "__tests__"
  ],
  "types": [
    "typePatches"
  ]
}